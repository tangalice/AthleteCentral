rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // === Helper Functions ===
    function isAuthed() {
      return request.auth != null;
    }
    
    function isVerifiedUser() {
      return isAuthed() && 
             request.auth.token.email_verified == true;
    }

    function isOwner(userId) {
      return isAuthed() && request.auth.uid == userId;
    }

    function isParticipant(participants) {
      return isAuthed() && request.auth.uid in participants;
    }

    // === USERS COLLECTION ===

		// Everyone can read their own user document â€” needed for role checks
		match /users/{requesterId} {
  		allow read: if request.auth != null && request.auth.uid == requesterId;
		}

		// Athlete & Coach logic
		match /users/{userId} {

      // --- Base user document (profile only) ---
      // allow read: if isOwner(userId) ||
                  // (isVerifiedUser() &&
                  // get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "coach");
                  
    	// Everyone can see list of users when creating chat
      allow read: if isVerifiedUser();
      allow create, update, delete: if isOwner(userId);

      // --- Goals Subcollection ---
      match /goalsList/{goalId} {
          allow read, write: if isOwner(userId);
          allow create: if isVerifiedUser() &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "coach";
      }

      // --- Feedback Subcollection ---
      match /feedbackList/{feedbackId} {
          allow read: if isOwner(userId);
          allow create: if isVerifiedUser() &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "coach";
      }
		}


    // === CHATS COLLECTION ===
    match /chats/{chatId} {
      allow read: if isVerifiedUser() && isParticipant(resource.data.participants);
      allow create: if isVerifiedUser() && 
                       isParticipant(request.resource.data.participants) &&
                       request.resource.data.participants.size() >= 2;
      allow update: if isVerifiedUser() && isParticipant(resource.data.participants);
      allow delete: if isVerifiedUser() && isParticipant(resource.data.participants);
    }

    // === MESSAGES COLLECTION ===
    match /messages/{messageId} {
      allow read: if isVerifiedUser();
      allow create: if isVerifiedUser() && 
                       request.auth.uid == request.resource.data.senderId &&
                       request.resource.data.timestamp != null;
      allow update: if isVerifiedUser() && 
                       request.auth.uid == resource.data.senderId;
      allow delete: if isVerifiedUser() && 
                       request.auth.uid == resource.data.senderId;
    }

    // === SESSIONS COLLECTION ===
    match /sessions/{sessionId} {
      allow read, write: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // === TEAMS COLLECTION ===
    match /teams/{teamId} {
      // Allow read if user is authenticated (simplified for team joining functionality)
      allow read: if isVerifiedUser();
      
      // Allow create if user is authenticated and is in the members list
      allow create: if isVerifiedUser() && 
                       request.auth.uid in request.resource.data.members &&
                       request.resource.data.createdBy == request.auth.uid;
      
      // Allow update if user is authenticated (simplified for team joining)
      allow update: if isVerifiedUser();
      
      // Allow delete only if user created the team
      allow delete: if isVerifiedUser() && resource.data.createdBy == request.auth.uid;
    }

    // === PUBLIC DATA ===
    match /public/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // === ADMIN ONLY ===
    match /admin/{document=**} {
      allow read, write: if false;
    }
  }
}