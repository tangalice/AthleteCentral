rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ========== Helpers ========== */
    function isAuthed() {
      return request.auth != null;
    }
    function isVerifiedUser() {
      return isAuthed() && request.auth.token.email_verified == true;
    }
    function isOwner(userId) {
      return isAuthed() && request.auth.uid == userId;
    }
    function isCoach(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role == "coach";
    }
    function isParticipant(participants) {
      return isAuthed() && request.auth.uid in participants;
    }
    function isTeamMember(teamId) {
      return isVerifiedUser() && (
        request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.members ||
        request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.athletes ||
        request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.coaches
      );
    }
    function isTeamCoach(teamId) {
      return isVerifiedUser() && 
        request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.coaches;
    }

    /* ========== Users (profile) ========== */
    match /users/{userId} {
      allow read, create, update, delete: if isOwner(userId);
      allow read: if isVerifiedUser();
      // Allow coaches to update/create health status for athletes
      allow create, update: if isVerifiedUser() && 
                      exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "coach";

      /* ---- Goals subcollection ---- */
      match /goalsList/{goalId} {
        allow read, write: if isOwner(userId);
        allow create, read, delete: if isVerifiedUser() && isCoach(request.auth.uid);
      }

      /* ---- Feedback subcollection ---- */
      match /feedbackList/{feedbackId} {
        allow read: if isOwner(userId);
        allow create: if isVerifiedUser() && isCoach(request.auth.uid);
      }

      /* ---- Sessions subcollection ---- */
      match /sessions/{sessionId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isOwner(userId);
      }

      /* ---- Test Performances subcollection ---- */
      match /testPerformances/{testId} {
        allow read: if isOwner(userId);
        allow read: if isVerifiedUser() && isCoach(request.auth.uid);
        allow create: if isVerifiedUser() && isCoach(request.auth.uid) && request.resource.data.userId == userId;
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isVerifiedUser() && isCoach(request.auth.uid);
        allow update, delete: if isOwner(userId);
      }
      
      match /performances/{resultId} {
    		allow read, write: if isVerifiedUser();
  		}
      
    

      /* ---- Practices subcollection ---- */  // ← ADD THIS
      match /practices/{practiceId} {           // ← ADD THIS
        allow read: if isOwner(userId);         // ← ADD THIS
        allow read: if isVerifiedUser() && isCoach(request.auth.uid);  // ← ADD THIS
        allow create, update, delete: if isOwner(userId);  // ← ADD THIS
        allow create, update, delete: if isVerifiedUser() && isCoach(request.auth.uid);  // ← ADD THIS
      }                                         // ← ADD THIS

      /* ---- Predictions subcollection ---- */
			match /predictions/{predictionId} {
  			allow read, write: if isOwner(userId);
			}
      
      match /savedReports/{reportId} {
        // Coaches can create and read their own saved reports
        allow create, read: if isOwner(userId) && isCoach(request.auth.uid);
        // Allow updates or deletions only by the report owner (coach)
        allow update, delete: if isOwner(userId);
      }
    }

    /* ========== Chats ========== */
    match /chats/{chatId} {
      allow read: if isVerifiedUser() && isParticipant(resource.data.participants);
      allow create: if isVerifiedUser() && isParticipant(request.resource.data.participants) && request.resource.data.participants.size() >= 2;
      allow update, delete: if isVerifiedUser() && isParticipant(resource.data.participants);
    }

    /* ========== Messages ========== */
    match /messages/{messageId} {
      allow read: if isVerifiedUser();
      allow create: if isVerifiedUser() && request.auth.uid == request.resource.data.senderId && request.resource.data.timestamp != null;
      allow update, delete: if isVerifiedUser() && request.auth.uid == resource.data.senderId;
    }
    
    /* ========== Teams ========== */
    match /teams/{teamId} {
      allow read: if isVerifiedUser();
      allow create: if isVerifiedUser() && request.auth.uid in request.resource.data.members && request.resource.data.createdBy == request.auth.uid;
      allow update: if isVerifiedUser();
      allow delete: if isVerifiedUser() && resource.data.createdBy == request.auth.uid;

      match /events/{eventId} {
        allow read: if isTeamMember(teamId);
        allow create: if isTeamCoach(teamId) && request.resource.data.createdBy == request.auth.uid && request.resource.data.datetime != null && request.resource.data.title != null;
        allow update: if isTeamCoach(teamId);
        allow delete: if isTeamCoach(teamId);
      }

      match /athletes/{athleteId} {
        allow read: if isTeamMember(teamId);
        allow write: if isVerifiedUser() && exists(/databases/$(database)/documents/teams/$(teamId)) && (request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.coaches || request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.createdBy);
      }
    }

    /* ========== Public ========== */
    match /public/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    /* ========== Shared Health Status ========== */
    match /sharedHealthStatus/{athleteId} {
      allow read, write, create: if isVerifiedUser() && isCoach(request.auth.uid);
    }

    /* ========== Admin ========== */
    match /admin/{document=**} {
      allow read, write: if false;
    }
  }
}