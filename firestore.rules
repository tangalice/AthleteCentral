rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ========== Helpers ========== */
    function isAuthed() {
      return request.auth != null;
    }
    function isVerifiedUser() {
      return isAuthed() && request.auth.token.email_verified == true;
    }
    function isOwner(userId) {
      return isAuthed() && request.auth.uid == userId;
    }
    function isCoach(uid) {
      return exists(/databases/$(database)/documents/users/$(uid)) && 
             get(/databases/$(database)/documents/users/$(uid)).data.role == "coach";
    }
    function isParticipant(participants) {
      return isAuthed() && request.auth.uid in participants;
    }
    function isTeamMember(teamId) {
      return isVerifiedUser() && exists(/databases/$(database)/documents/teams/$(teamId)) && (
        request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.members ||
        request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.athletes ||
        request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.coaches
      );
    }
    function isTeamCoach(teamId) {
      return isVerifiedUser() && exists(/databases/$(database)/documents/teams/$(teamId)) &&
        request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.coaches;
    }
    function isTeamAthlete(teamId) {
      return isVerifiedUser() && exists(/databases/$(database)/documents/teams/$(teamId)) && (
        request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.athletes ||
        request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.members
      );
    }
    // Helper to check if user is a coach of the athlete's team
    function isCoachOfAthlete(athleteId) {
      return isVerifiedUser() && isCoach(request.auth.uid);
    }

    /* ========== Users (profile) ========== */
    match /users/{userId} {
      allow read, create, update, delete: if isOwner(userId);
      allow read: if isVerifiedUser();
      // Allow coaches to update health status for athletes
      allow update: if isVerifiedUser() && 
                      isCoach(request.auth.uid) &&
                      request.auth.uid != userId &&
                      resource.data
                       .diff(request.resource.data)
                       .changedKeys()
                       .hasOnly(['healthStatus','healthStatusUpdatedAt'])
                  && (request.resource.data.healthStatus in ['active','injured','unavailable']);

      /* ---- Goals subcollection ---- */
      match /goalsList/{goalId} {
        allow read, write: if isOwner(userId);
        allow create, read, delete: if isVerifiedUser() && isCoach(request.auth.uid);
      }

      /* ---- Feedback subcollection ---- */
      match /feedbackList/{feedbackId} {
        allow read, update: if isOwner(userId);
        allow create: if isVerifiedUser() && isCoach(request.auth.uid);
      }

      /* ---- Sessions subcollection ---- */
      match /sessions/{sessionId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isOwner(userId);
      }

      /* ---- Test Performances subcollection ---- */
      match /testPerformances/{testId} {
        allow read: if isOwner(userId);
        allow read: if isVerifiedUser() && isCoach(request.auth.uid);
        allow create: if isVerifiedUser() && isCoach(request.auth.uid) && request.resource.data.userId == userId;
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isVerifiedUser() && isCoach(request.auth.uid);
        allow update, delete: if isOwner(userId);
      }
      
      match /performances/{resultId} {
        allow read, write: if isVerifiedUser();
      }

      /* ---- Practices subcollection ---- */
      match /practices/{practiceId} {
        allow read: if isOwner(userId);
        allow read: if isVerifiedUser() && isCoach(request.auth.uid);
        allow create, update, delete: if isOwner(userId);
        allow create, update, delete: if isVerifiedUser() && isCoach(request.auth.uid);
      }

      /* ---- Predictions subcollection ---- */
      match /predictions/{predictionId} {
        allow read, write: if isOwner(userId);
      }
      
      match /savedReports/{reportId} {
        // Coaches can create and read their own saved reports
        allow create, read: if isOwner(userId) && isCoach(request.auth.uid);
        // Allow updates or deletions only by the report owner (coach)
        allow update, delete: if isOwner(userId);
      }
    }

    /* ========== Performances (root level) ========== */
    match /performances/{performanceId} {
      allow read: if isVerifiedUser();
      allow create: if isVerifiedUser() && isCoach(request.auth.uid);
      allow update, delete: if isVerifiedUser() && isCoach(request.auth.uid);
    }

    /* ========== Chats ========== */
    match /chats/{chatId} {
      allow read: if isVerifiedUser() && isParticipant(resource.data.participants);
      allow create: if isVerifiedUser() && isParticipant(request.resource.data.participants) && request.resource.data.participants.size() >= 2;
      allow update, delete: if isVerifiedUser() && isParticipant(resource.data.participants);
    }

    /* ========== Messages ========== */
    match /messages/{messageId} {
      allow read: if isVerifiedUser();
      allow create: if isVerifiedUser() && request.auth.uid == request.resource.data.senderId && request.resource.data.timestamp != null;
      allow update, delete: if isVerifiedUser() && request.auth.uid == resource.data.senderId;
    }
    
    /* ========== Teams ========== */
    match /teams/{teamId} {
      allow read: if isVerifiedUser();
      allow create: if isVerifiedUser() && request.auth.uid in request.resource.data.members && request.resource.data.createdBy == request.auth.uid;
      allow update: if isVerifiedUser();
      allow delete: if isVerifiedUser() && (resource.data.createdBy == request.auth.uid || isTeamCoach(teamId));

      match /events/{eventId} {
        allow read: if isTeamMember(teamId);
        allow create: if isTeamCoach(teamId) && request.resource.data.createdBy == request.auth.uid && request.resource.data.datetime != null && request.resource.data.title != null;
        allow update: if isTeamCoach(teamId);
        allow delete: if isTeamCoach(teamId);
        
        /* ---- Event Attendance subcollection ---- */
        match /attendance/{attendanceId} {
          allow read: if isTeamMember(teamId);
          allow create, update: if isTeamCoach(teamId);
          allow delete: if isTeamCoach(teamId);
        }
      }

      match /athletes/{athleteId} {
        allow read: if isTeamMember(teamId);
        allow read, write: if isVerifiedUser() && isCoach(request.auth.uid);
        allow write: if isVerifiedUser() && exists(/databases/$(database)/documents/teams/$(teamId)) && 
                       (request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.coaches || 
                        request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.createdBy);
      }
    }
    
    
    /* ========== Mail ========== */
    match /mail/{id} {
      allow create: if request.auth != null
        && request.resource.data.message is map
        && request.resource.data.message.subject is string
        && (
          (request.resource.data.message.html is string) ||
          (request.resource.data.message.text is string)
        )
        && (
          (request.resource.data.to is string) ||
          (request.resource.data.to is list && request.resource.data.to.size() > 0)
        );
      allow read: if false; // don't expose outbound emails
    }


    /* ========== Athlete Availability (New Collection) ========== */
    // Document IDs format: {teamId}_{athleteId}_{dateKey}
    // Example: team123_user456_20250106
    match /athleteAvailability/{availabilityId} {
      // Anyone verified can read (for now, can be restricted later)
      allow read: if isVerifiedUser();
      
      // Coaches can create/update/delete availability
      allow create: if isVerifiedUser() && isCoach(request.auth.uid);
      allow update: if isVerifiedUser() && isCoach(request.auth.uid);
      allow delete: if isVerifiedUser() && isCoach(request.auth.uid);
    }

    /* ========== Shared Health Status (Legacy - Keep for compatibility) ========== */
    match /sharedHealthStatus/{athleteId} {
      allow read: if isVerifiedUser();
      allow write, create: if isVerifiedUser() && isCoach(request.auth.uid);
    }
    
    /* ========== Mail ========== */
    match /mail/{id} {
      allow create: if request.auth != null
        && request.resource.data.message is map
        && request.resource.data.message.subject is string
        && (
          (request.resource.data.message.html is string) ||
          (request.resource.data.message.text is string)
        )
        && (
          (request.resource.data.to is string) ||
          (request.resource.data.to is list && request.resource.data.to.size() > 0)
        );
      allow read: if false; // don't expose outbound emails
    }

    /* ========== Public ========== */
    match /public/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    /* ========== Shared Health Status ========== */
    match /sharedHealthStatus/{athleteId} {
      allow read, write, create: if isVerifiedUser() && isCoach(request.auth.uid);
    }

    /* ========== Admin ========== */
    match /admin/{document=**} {
      allow read, write: if false;
    }
  }
}